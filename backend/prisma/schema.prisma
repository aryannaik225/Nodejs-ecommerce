generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model cart_items {
  id         Int      @id @default(autoincrement())
  user_id    Int
  product_id Int
  quantity   Int?     @default(1)
  products   products @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_cart_product")
  users      users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_cart_user")

  @@unique([user_id, product_id], map: "unique_cart_item")
  @@index([product_id], map: "fk_cart_product")
  @@index([user_id], map: "fk_cart_user")
}

model products {
  id                          Int                           @id @default(autoincrement())
  title                       String                        @db.VarChar(32)
  description                 String                        @db.VarChar(255)
  price                       Int
  image                       String?                       @db.VarChar(15000)
  rewardedByCoupons           DiscountCode[]                @relation("FreeProductReward")
  ProductDiscountCodeRelation ProductDiscountCodeRelation[]
  cart_items                  cart_items[]
  order_items                 order_items[]
  product_categories          product_categories[]
  stock                       Int                           @default(0)
  reviews reviews[]
}

model products_backup {
  id          Int     @id @default(autoincrement())
  title       String  @db.VarChar(32)
  description String  @db.VarChar(255)
  price       Int
  image       String? @db.VarChar(3200)
}

model users {
  id         Int          @id @default(autoincrement())
  name       String       @db.VarChar(255)
  email      String       @unique(map: "email") @db.VarChar(255)
  password   String       @db.VarChar(255)
  cart_items cart_items[]
  orders     orders[]
  refreshTokens RefreshToken[]
  reviews reviews[]
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    Int
  user      users    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model reviews {
  id Int @id @default(autoincrement())
  rating Int // 1 to 5
  comment String? @db.VarChar(500)
  user_id Int
  product_id Int
  created_at DateTime @default(now())

  users users @relation(fields: [user_id], references: [id], onDelete: Cascade)
  products products @relation(fields: [product_id], references: [id], onDelete: Cascade)

  @@unique([user_id, product_id])
  @@index([product_id])
  @@index([user_id])
}

model categories {
  id                 Int                  @id @default(autoincrement())
  name               String               @db.VarChar(50)
  slug               String               @db.VarChar(50)
  product_categories product_categories[]
}

model product_categories {
  product_id  Int
  category_id Int
  categories  categories @relation(fields: [category_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_cat_cat")
  products    products   @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_cat_prod")

  @@id([product_id, category_id])
  @@index([category_id], map: "fk_cat_cat")
}

model order_items {
  id            Int      @id @default(autoincrement())
  order_id      Int
  product_id    Int
  product_title String   @db.VarChar(32)
  product_price Int
  quantity      Int
  orders        orders   @relation(fields: [order_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_order_items_order")
  products      products @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_order_items_product")

  @@index([order_id], map: "fk_order_items_order")
  @@index([product_id], map: "fk_order_items_product")
}

model orders {
  id             Int                   @id @default(autoincrement())
  user_id        Int
  total_amount   Int
  payment_method String                @db.VarChar(50)
  payment_status orders_payment_status
  order_status   orders_order_status
  created_at     DateTime?             @default(now()) @db.Timestamp(0)
  discountCodeId Int?
  order_items    order_items[]
  users          users                 @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_orders_user")
  DiscountCode   DiscountCode?         @relation(fields: [discountCodeId], references: [id], onDelete: Restrict)

  @@index([user_id], map: "fk_orders_user")
  @@index([discountCodeId], map: "orders_discountCodeId_fkey")
}

model DiscountCode {
  id                          Int                           @id @default(autoincrement())
  code                        String                        @unique
  discountAmount              Int
  discountType                DiscountCode_discountType
  maxDiscountAmount           Int?
  minCartAmount               Int?
  startsAt                    DateTime?                     @default(now())
  expiresAt                   DateTime?
  limit                       Int?
  uses                        Int                           @default(0)
  userLimit                   Int?
  newUsersOnly                Boolean                       @default(false)
  isStackable                 Boolean                       @default(false)
  applyStrategy               DiscountCode_applyStrategy    @default(ALL_ITEMS)
  isActive                    Boolean                       @default(true)
  allProducts                 Boolean                       @default(true)
  createdAt                   DateTime                      @default(now())
  freeProductId               Int?
  description                 String?                       @db.VarChar(256)
  freeProduct                 products?                     @relation("FreeProductReward", fields: [freeProductId], references: [id])
  ProductDiscountCodeRelation ProductDiscountCodeRelation[]
  orders                      orders[]

  @@index([freeProductId], map: "DiscountCode_freeProductId_fkey")
}

model ProductDiscountCodeRelation {
  id             Int          @id @default(autoincrement())
  productId      Int
  discountCodeId Int
  DiscountCode   DiscountCode @relation(fields: [discountCodeId], references: [id], onDelete: Cascade)
  products       products     @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, discountCodeId], map: "ProductDiscountCodeRelation_prod_code_key")
  @@index([discountCodeId], map: "ProductDiscountCodeRelation_discountCodeId_fkey")
}

enum orders_payment_status {
  pending
  paid
  failed
  refunded
}

enum orders_order_status {
  placed
  shipped
  delivered
  cancelled
}

enum DiscountCode_discountType {
  PERCENTAGE
  FIXED
  FREE_SHIPPING
}

enum DiscountCode_applyStrategy {
  ALL_ITEMS
  HIGHEST_ITEM
  CHEAPEST_ITEM
}
