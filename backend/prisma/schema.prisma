generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model cart_items {
  id         Int      @id @default(autoincrement())
  user_id    Int
  product_id Int
  quantity   Int?     @default(1)
  products   products @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_cart_product")
  users      users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_cart_user")

  @@unique([user_id, product_id], map: "unique_cart_item")
  @@index([product_id], map: "fk_cart_product")
  @@index([user_id], map: "fk_cart_user")
}

model products {
  id                 Int                  @id @default(autoincrement())
  title              String               @db.VarChar(32)
  description        String               @db.VarChar(255)
  price              Int
  image              String?              @db.VarChar(15000)
  cart_items         cart_items[]
  order_items        order_items[]
  product_categories product_categories[]
}

model products_backup {
  id          Int     @id @default(autoincrement())
  title       String  @db.VarChar(32)
  description String  @db.VarChar(255)
  price       Int
  image       String? @db.VarChar(3200)
}

model users {
  id         Int          @id @default(autoincrement())
  name       String       @db.VarChar(255)
  email      String       @unique(map: "email") @db.VarChar(255)
  password   String       @db.VarChar(255)
  cart_items cart_items[]
  orders     orders[]
}

model categories {
  id                 Int                  @id @default(autoincrement())
  name               String               @db.VarChar(50)
  slug               String               @db.VarChar(50)
  product_categories product_categories[]
}

model product_categories {
  product_id  Int
  category_id Int
  // RENAMED fk_1 -> fk_cat_prod
  products    products   @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_cat_prod")
  // RENAMED fk_2 -> fk_cat_cat
  categories  categories @relation(fields: [category_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_cat_cat")

  @@id([product_id, category_id])
  @@index([category_id], map: "fk_cat_cat")
}

model order_items {
  id            Int      @id @default(autoincrement())
  order_id      Int
  product_id    Int
  product_title String   @db.VarChar(32)
  product_price Int
  quantity      Int
  // RENAMED fk_1 -> fk_order_items_order
  orders        orders   @relation(fields: [order_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_order_items_order")
  // RENAMED fk_2 -> fk_order_items_product
  products      products @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_order_items_product")

  @@index([order_id], map: "fk_order_items_order")
  @@index([product_id], map: "fk_order_items_product")
}

model orders {
  id             Int                   @id @default(autoincrement())
  user_id        Int
  total_amount   Int
  payment_method String                @db.VarChar(50)
  payment_status orders_payment_status
  order_status   orders_order_status
  created_at     DateTime?             @default(now()) @db.Timestamp(0)
  order_items    order_items[]
  // RENAMED fk_1 -> fk_orders_user
  users          users                 @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_orders_user")

  @@index([user_id], map: "fk_orders_user")
}

enum orders_payment_status {
  pending
  paid
  failed
  refunded
}

enum orders_order_status {
  placed
  shipped
  delivered
  cancelled
}